.simpleItem{width: 100%; position: relative; display: flex; flex-direction: column; height:100%;}
.simpleItem .itemTitle{font-size: 15px;color: rgba(0, 0, 0, 0.87); margin: 16px 40px 4px 16px;display: -webkit-box;overflow: hidden;-webkit-line-clamp: 1;-webkit-box-orient: vertical;text-overflow: ellipsis;flex-shrink: 0;}
.simpleItem .itemContent{font-size: 13px;color: rgba(0, 0, 0, 0.54);margin: 0px 40px 16px 16px;display: -webkit-box;overflow: hidden;-webkit-line-clamp: 2;-webkit-box-orient: vertical;text-overflow: ellipsis;flex-shrink: 0;}
.simpleItem .divider {background-color: rgba(0, 0, 0, 0.07);position: absolute;width: 100%;height: 1px;bottom: 0} 